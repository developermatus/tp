programa {
	funcao inicio() {
		
		real num1, num2

		escreva ("Digite o primeiro número: ")
		leia (num1)
		escreva ("Digite o segundo número: ")
		leia (num2)

		escreva ("\n O resultado da soma é: ", somar (num1, num2), "\n")
		escreva ("\n O resultado da subtração é: ", subtracao (num1, num2), "\n")
		escreva ("\n O resultado da divisão é: ", divisao (num1, num2), "\n")
	    escreva ("\n O resultado da multiplicação: ", multiplicacao (num1, num2), "\n")
	}
	
	
	funcao real somar (real a, real b)
	{
		real resultado
		resultado = a + b
		retorne resultado
	
	}
	
	funcao real subtracao (real a, real b)
	{
		real resultado
		resultado = a - b
		retorne resultado
	
	}
	
	funcao real divisao (real a, real b)
	{
		real resultado
		resultado = a / b
		retorne resultado
	
	}
	
	funcao real multiplicacao (real a, real b)
	{
		real resultado
		resultado = a * b
		retorne resultado
	
	}
	
	
}
